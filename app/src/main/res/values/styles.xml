<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Custom.Style.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/access_green</item>
        <item name="android:colorButtonNormal">@color/access_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="Custom.Style.Text.Header" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Custom.Style.Rounded.Corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="Custom.Style.TextView.Email" parent="">
        <item name="android:textSize">@dimen/email_link_text_size</item>
        <item name="android:textColor">@color/email_address_link</item>
    </style>

</resources>